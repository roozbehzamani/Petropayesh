@model List<PetroPayesh.Models.Domain.Tbl_Products>

@{
    ViewBag.Title = "صفحه نخست | پتروپایش توسعه ماهان";
    ViewBag.MetaDescription = "شرکت پترو پایش ماهان توسعه اولین وتنهاترین تولید کننده گریس پمپ دستی میکادو|تخفیف ویژه|مشاهده محصولات";
    Layout = "~/Views/Shared/_Index.cshtml";
    PetroPayesh.Models.Repository.ProductRepo productRepo = new PetroPayesh.Models.Repository.ProductRepo();
}

<!------slider------>
<div class="container-fluid px-0 mt-3">
    <div id="demo" class="carousel slide" data-ride="carousel">
        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Content/Images/bnr-1.jpg" class="img-fluid">
            </div>
            <div class="carousel-item">
                <img src="/Content/Images/bnr-2.jpg" class="img-fluid">
            </div>
            <div class="carousel-item">
                <img src="/Content/Images/bnr-3.jpg" class="img-fluid">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div>
</div>

<!-----product------>
<div class="container-fluid mt-2" style="background-color: #edeeed;border-top: 1px solid #ddd;">
    <div class="container">
        <div class="row py-3">
            <div class=" col-md-2 ">
                <img src="/Content/Images/settings-gears.png" class=" mx-auto img-fluid img-setting d-md-block d-lg-block d-none">
            </div>
            <div class="col-12 col-md-8">
                <h3 class="text-center pt-3">محصولات</h3>
            </div>
            <div class=" col-md-2 ">
                <img src="/Content/Images/settings-gears.png" class=" mx-auto img-fluid img-setting  d-md-block d-lg-block d-none">
            </div>
        </div>
    </div>
</div>


<!--product-starts-->
<div class="container">
    <div class="row mt-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-3 mt-2">
                <div class="card">
                    <div class="card-img">
                        <a href="~/Home/ProductSingle/@item.ID">
                            <img src="/Content/Images/@productRepo.getProductImage(item.ID).Image" alt="@item.Name" class="img-ca img-fluid">
                        </a>
                        <hr />
                        <div class="card-body ">
                            <h6 class="text-center">
                                <a href="~/Home/ProductSingle/@item.ID">@item.Name</a>
                            </h6>
                            <p class="text-secondary text-center font-s">@item.Price.ToString() تومان</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!--product-end-->